<script>
    $(document).ready(function () {

        // notification dropdown is clicked, and notifications are seen
        $('.dropdown.notification').on('shown.bs.dropdown', function () {
            var seenNotificationRequest = new XMLHttpRequest();
            seenNotificationRequest.onload = function () {
                var result = $.parseJSON(this.responseText);
                if (result === "done") {
                    $('.NotificationNumber').html('');
                    $('.bell.red.icon').addClass('outline');
                }
            }
            seenNotificationRequest.open("POST", "/Home/SeeNotifications");
            seenNotificationRequest.send();
        });

        $('.navbar').find('form').find('input').keyup(function (event) {
            if (event.keyCode === 13) {
                $('.navbar').find('.search').click();
            }
        });

        $('.navbar').on('click', '.search', function () {
            var searchString = $('.navbar').find('form').find('input').val();
            var url = '@Html.Raw(Url.Action("Index", "Article", new {key = "Search",value="__value__"}))';
            var redirectTo = url.replace('__value__', encodeURIComponent(searchString));
            window.location.href = redirectTo;
        });

    });
</script>


